{
  "name": "invoice-processing-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Invoice Processing Application",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "npm run build && cdk deploy --context environment=dev --all --hotswap",
    "deploy:prod": "npm run build && cdk deploy --context environment=prod --all --require-approval never", 
    "deploy:script": "ts-node scripts/deploy.ts",
    "deploy:frontend": "ts-node scripts/deploy.ts frontend",
    "synth": "cdk synth --context environment=dev",
    "synth:prod": "cdk synth --context environment=prod",
    "diff": "cdk diff --context environment=dev",
    "diff:prod": "cdk diff --context environment=prod",
    "destroy:dev": "cdk destroy --context environment=dev --all --force",
    "destroy:prod": "cdk destroy --context environment=prod --all"
  },
  "keywords": ["aws", "cdk", "infrastructure", "invoice-processing"],
  "author": "Waterfield Technologies",
  "license": "UNLICENSED",
  "dependencies": {
    "aws-cdk-lib": "^2.220.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "aws-cdk": "^2.220.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
